@model IEnumerable<HotelSupramonte.Models.Prenotazioni>

@{
    ViewBag.Title = "PrenotazioniView";
}

<h2>PrenotazioniView</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPrenotazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPrenotazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCheckIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCheckOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anticipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPrenotazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPrenotazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anticipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.ActionLink("Modifica prenotazione", "Edit", new { id = item.IdPrenotazione })
            </td>
            <td>
                @Html.ActionLink("CheckOut", "CheckOut", new { id = item.IdPrenotazione })
            </td>
        </tr>

    }

</table>
